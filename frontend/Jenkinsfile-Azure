pipeline {
    agent { label 'frontend' }
    environment {
        REGION = 'Poland Central'
        STORAGE_BUCKET = 'talantino_team_bucket'

        API_URL = credentials('talantino_url_back')

        FRONTEND_ACCESS_KEY = credentials('talantino_frontend_access_key')
        FRONTEND_SECRET_KEY = credentials('talantino_frontend_secret_key')

        WEBHOOK_URL = credentials('talantino_discord_webhook')
    }
    stages {
        stage('clone') {
            steps {
                git branch: 'dev', url: 'https://github.com/Team-Olya/frontend.git'
            }
        }
        stage('build') {
            steps {
                sh '''
                export REACT_APP_API_URL=${API_URL}
                export BUCKET=${STORAGE_BUCKET}

                npm install --omit=dev
                npm run build
                chmod -R 755 ./build/*
                '''
            }
        }
        stage('deploy') {
            steps {
                sh '''
                    ssh -i "/home/jenkins/.ssh/slave-Talantino" talantino-app@10.0.0.5 "rm -rf /var/www/talantino-application/html/*"
                    scp -i "/home/jenkins/.ssh/slave-Talantino" -rp ./build/* talantino-app@10.0.0.5:/var/www/talantino-application/html/
                '''
            }
        }
    }
    post {
        always {
            discordSend description: "Jenkins pipeline build: ${currentBuild.currentResult}\nBuild log: ${BUILD_URL}consoleText",
                link: env.BUILD_URL,
                result: currentBuild.currentResult,
                title: JOB_NAME,
                webhookURL: "${env.WEBHOOK_URL}"
            sh 'rm -rf ./*'
        }
    }
}
